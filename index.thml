<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ระบบจัดการยานักเรียนประจำ</title>
    
    <!-- Firebase SDK -->
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore-compat.js"></script>
    
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;500;600;700&display=swap');
        
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Kanit', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #2d3748;
            line-height: 1.6;
        }

        .app-container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 20px;
        }

        .main-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            text-align: center;
            margin-bottom: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .main-header h1 {
            font-size: 2.8rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .main-header p {
            color: #64748b;
            font-size: 1.1rem;
            font-weight: 400;
        }

        .nav-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            padding: 8px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .nav-tabs {
            display: flex;
            gap: 8px;
        }

        .nav-tab {
            flex: 1;
            padding: 16px 24px;
            background: transparent;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.3s ease;
            color: #64748b;
            font-family: 'Kanit', sans-serif;
        }

        .nav-tab.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        .content-area {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            min-height: 600px;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
            animation: fadeIn 0.3s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #e2e8f0;
            flex-wrap: wrap;
            gap: 16px;
        }

        .section-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: #1e293b;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .section-title::before {
            content: '';
            width: 4px;
            height: 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 2px;
        }

        .alert-dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .alert-card {
            background: white;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            border-left: 4px solid;
            transition: all 0.3s ease;
        }

        .alert-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .alert-card.alert-danger { border-left-color: #ef4444; }
        .alert-card.alert-warning { border-left-color: #f59e0b; }
        .alert-card.alert-info { border-left-color: #3b82f6; }

        .alert-count {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .alert-count.danger { color: #ef4444; }
        .alert-count.warning { color: #f59e0b; }
        .alert-count.info { color: #3b82f6; }

        .stats-dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 24px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 8px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .stat-label {
            color: #64748b;
            font-weight: 500;
        }

        .bulk-actions {
            display: flex;
            gap: 12px;
            align-items: center;
            flex-wrap: wrap;
        }

        .filter-controls {
            display: flex;
            gap: 16px;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .filter-label {
            font-size: 0.8rem;
            color: #64748b;
            font-weight: 500;
        }

        .filter-select {
            padding: 8px 12px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 14px;
            background: white;
            font-family: 'Kanit', sans-serif;
            min-width: 120px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-family: 'Kanit', sans-serif;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

        .btn-success {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
        }

        .btn-warning {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
        }

        .btn-secondary {
            background: #64748b;
            color: white;
        }

        .btn-info {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .search-container {
            position: relative;
            margin-bottom: 30px;
        }

        .search-input {
            width: 100%;
            padding: 16px 20px 16px 50px;
            border: 2px solid #e2e8f0;
            border-radius: 16px;
            font-size: 16px;
            background: #f8fafc;
            font-family: 'Kanit', sans-serif;
        }

        .search-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            background: white;
        }

        .search-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            font-size: 20px;
        }

        .students-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
            gap: 20px;
        }

        .student-card {
            background: white;
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            position: relative;
        }

        .student-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 16px 16px 0 0;
        }

        .student-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        .student-card.has-alerts::before {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }

        .student-name {
            font-size: 1.2rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 4px;
        }

        .student-status {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
            text-transform: uppercase;
        }

        .status-boarding { background: #dcfce7; color: #166534; }
        .status-home { background: #f3f4f6; color: #374151; }
        .status-manual { background: #f3e8ff; color: #6b21a8; }
        .status-home-with-medicine { background: #fef3c7; color: #92400e; }

        .student-info {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
            margin: 16px 0;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .info-label {
            font-size: 0.8rem;
            color: #64748b;
            font-weight: 500;
        }

        .info-value {
            font-size: 0.95rem;
            color: #1e293b;
            font-weight: 500;
        }

        .student-alerts {
            margin-bottom: 16px;
            padding: 12px;
            background: #fef2f2;
            border-radius: 8px;
            border-left: 4px solid #ef4444;
        }

        .student-actions {
            display: flex;
            gap: 8px;
            margin-top: 16px;
            padding-top: 16px;
            border-top: 1px solid #e2e8f0;
            flex-wrap: wrap;
        }

        .medicine-card {
            background: white;
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            position: relative;
        }

        .medicine-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border-radius: 16px 16px 0 0;
        }

        .medicine-card.expiring::before {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        }

        .medicine-card.expired::before {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }

        .medicine-name {
            font-size: 1.3rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 8px;
        }

        .quantity-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .quantity-sufficient { background: #dcfce7; color: #166534; }
        .quantity-low { background: #fef3c7; color: #92400e; }
        .quantity-critical { background: #fee2e2; color: #991b1b; }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(10px);
        }

        .modal-content {
            background: white;
            margin: 3% auto;
            padding: 0;
            border-radius: 20px;
            width: 90%;
            max-width: 700px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
            animation: modalSlideIn 0.3s ease;
            max-height: 90vh;
            overflow-y: auto;
        }

        @keyframes modalSlideIn {
            from { transform: translateY(-50px) scale(0.95); opacity: 0; }
            to { transform: translateY(0) scale(1); opacity: 1; }
        }

        .modal-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 24px 30px;
            border-radius: 20px 20px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h2 {
            margin: 0;
            font-size: 1.5rem;
        }

        .close {
            color: white;
            font-size: 24px;
            font-weight: bold;
            cursor: pointer;
            padding: 4px;
        }

        .modal-body {
            padding: 30px;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #374151;
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-size: 16px;
            font-family: 'Kanit', sans-serif;
            background: #f9fafb;
        }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            background: white;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .dosage-container {
            background: #f8fafc;
            border-radius: 12px;
            padding: 16px;
            margin-top: 8px;
        }

        .dosage-row {
            display: flex;
            gap: 12px;
            margin-bottom: 12px;
            align-items: end;
        }

        .alert {
            padding: 16px 20px;
            margin-bottom: 20px;
            border-radius: 12px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .alert-success {
            background: #dcfce7;
            color: #166534;
            border: 1px solid #bbf7d0;
        }

        .alert-danger {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        .alert-warning {
            background: #fef3c7;
            color: #92400e;
            border: 1px solid #fde68a;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #64748b;
        }

        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 10000;
        }

        .loading-content {
            background: white;
            padding: 30px;
            border-radius: 16px;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        }

        .loading-spinner {
            width: 40px;
            height: 40px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 16px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @media (max-width: 768px) {
            .students-grid {
                grid-template-columns: 1fr;
            }
            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="app-container">
        <div class="main-header">
            <h1>ระบบจัดการยานักเรียนประจำ</h1>
            <p>จัดการข้อมูลนักเรียนและยาส่วนตัวแยกรายบุคคล พร้อมระบบหักยาอัตโนมัติ (Firebase)</p>
        </div>

        <div class="nav-container">
            <div class="nav-tabs">
                <button class="nav-tab active" onclick="showTab('dashboard', event)">📊 แดชบอร์ด</button>
                <button class="nav-tab" onclick="showTab('students', event)">👨‍🎓 จัดการนักเรียน</button>
                <button class="nav-tab" onclick="showTab('medicines', event)">💊 จัดการยานักเรียน</button>
                <button class="nav-tab" onclick="showTab('reports', event)">📋 รายงาน</button>
            </div>
        </div>

        <div class="content-area">
            <!-- Dashboard Tab -->
            <div id="dashboard-tab" class="tab-content active">
                <div class="section-header">
                    <h2 class="section-title">ภาพรวมระบบ</h2>
                    <button class="btn btn-success" onclick="refreshDashboard()">🔄 รีเฟรช</button>
                </div>
                <div class="alert-dashboard" id="alertDashboard"></div>
                <div class="stats-dashboard" id="statsDashboard"></div>
            </div>

            <!-- Students Tab -->
            <div id="students-tab" class="tab-content">
                <div class="section-header">
                    <h2 class="section-title">รายชื่อนักเรียน</h2>
                    <div class="bulk-actions">
                        <button class="btn btn-success" onclick="bulkUpdateStatus('boarding')">🏫 ทุกคนอยู่โรงเรียน</button>
                        <button class="btn btn-secondary" onclick="bulkUpdateStatus('home')">🏠 ทุกคนกลับบ้าน</button>
                        <button class="btn btn-primary" onclick="openStudentModal()">➕ เพิ่มนักเรียน</button>
                    </div>
                </div>
                <div class="filter-controls">
                    <div class="filter-group">
                        <label class="filter-label">สถานะ</label>
                        <select id="statusFilter" class="filter-select" onchange="filterStudents()">
                            <option value="">ทั้งหมด</option>
                            <option value="boarding">อยู่โรงเรียน</option>
                            <option value="home">กลับบ้าน</option>
                            <option value="manual">จัดการแมนนวล</option>
                        </select>
                    </div>
                </div>
                <div class="search-container">
                    <div class="search-icon">🔍</div>
                    <input type="text" class="search-input" id="studentSearch" 
                           placeholder="ค้นหานักเรียน..." onkeyup="filterStudents()">
                </div>
                <div class="students-grid" id="studentsContainer"></div>
            </div>

            <!-- Medicines Tab -->
            <div id="medicines-tab" class="tab-content">
                <div class="section-header">
                    <h2 class="section-title">จัดการยานักเรียน</h2>
                    <div style="display: flex; gap: 12px;">
                        <select id="studentSelect" class="filter-select" style="min-width: 300px;" onchange="loadStudentMedicines()">
                            <option value="">เลือกนักเรียน</option>
                        </select>
                        <button class="btn btn-success" onclick="openMedicineModal()" id="addMedicineBtn" disabled>➕ เพิ่มยา</button>
                    </div>
                </div>
                <div id="medicinesContainer">
                    <div class="empty-state">
                        <div class="empty-state-icon">💊</div>
                        <h3>เลือกนักเรียนเพื่อจัดการยา</h3>
                    </div>
                </div>
            </div>

            <!-- Reports Tab -->
            <div id="reports-tab" class="tab-content">
                <div class="section-header">
                    <h2 class="section-title">รายงานและสถิติ</h2>
                    <button class="btn btn-primary" onclick="generateMedicineReport()">💊 รายงานยา</button>
                </div>
                <div id="reportsContainer">
                    <div class="empty-state">
                        <div class="empty-state-icon">📋</div>
                        <h3>คลิกปุ่มด้านบนเพื่อสร้างรายงาน</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Student Modal -->
    <div id="studentModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="studentModalTitle">เพิ่มนักเรียนใหม่</h2>
                <span class="close" onclick="closeStudentModal()">&times;</span>
            </div>
            <div class="modal-body">
                <form id="studentForm">
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">รหัสนักเรียน *</label>
                            <input type="text" id="studentId" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">ห้อง *</label>
                            <input type="text" id="studentRoom" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">ชื่อ *</label>
                            <input type="text" id="studentFirstName" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">นามสกุล *</label>
                            <input type="text" id="studentLastName" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">อายุ *</label>
                            <input type="number" id="studentAge" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">สถานะ *</label>
                            <select id="studentStatus" class="form-control" required>
                                <option value="boarding">อยู่โรงเรียน</option>
                                <option value="home">กลับบ้าน</option>
                                <option value="manual">จัดการแมนนวล</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">ประวัติแพ้ยา</label>
                        <textarea id="allergies" class="form-control" rows="2"></textarea>
                    </div>
                    <div style="display: flex; gap: 12px; justify-content: flex-end;">
                        <button type="button" class="btn btn-secondary" onclick="closeStudentModal()">ยกเลิก</button>
                        <button type="submit" class="btn btn-primary">บันทึก</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Medicine Modal -->
    <div id="medicineModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="medicineModalTitle">เพิ่มยาใหม่</h2>
                <span class="close" onclick="closeMedicineModal()">&times;</span>
            </div>
            <div class="modal-body">
                <form id="medicineForm">
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">ชื่อยา *</label>
                            <input type="text" id="medicineName" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">จำนวน *</label>
                            <input type="number" id="medicineQuantity" class="form-control" required step="0.5">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">หน่วย *</label>
                            <select id="medicineUnit" class="form-control" required>
                                <option value="">เลือกหน่วย</option>
                                <option value="เม็ด">เม็ด</option>
                                <option value="แคปซูล">แคปซูล</option>
                                <option value="ช้อนชา">ช้อนชา</option>
                                <option value="มล.">มล.</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label">วันหมดอายุ</label>
                            <input type="date" id="medicineExpiry" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">การให้ยา</label>
                        <div class="dosage-container">
                            <div id="dosageContainer">
                                <div class="dosage-row">
                                    <input type="time" class="form-control dosage-time" style="flex: 1;">
                                    <input type="number" class="form-control dosage-amount" step="0.5" style="flex: 1;">
                                    <button type="button" class="btn btn-danger" onclick="removeDosageRow(this)">ลบ</button>
                                </div>
                            </div>
                            <button type="button" class="btn btn-success" onclick="addDosageRow()" style="margin-top: 12px;">เพิ่มเวลา</button>
                        </div>
                    </div>
                    <div style="display: flex; gap: 12px; justify-content: flex-end;">
                        <button type="button" class="btn btn-secondary" onclick="closeMedicineModal()">ยกเลิก</button>
                        <button type="submit" class="btn btn-success">บันทึก</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Firebase Configuration
        const firebaseConfig = {
            apiKey: "YOUR_API_KEY",
            authDomain: "YOUR_AUTH_DOMAIN",
            projectId: "YOUR_PROJECT_ID",
            storageBucket: "YOUR_STORAGE_BUCKET",
            messagingSenderId: "YOUR_MESSAGING_SENDER_ID",
            appId: "YOUR_APP_ID"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        // Global Variables
        let students = [];
        let medicines = [];
        let medicineHistory = [];
        let currentEditingStudent = null;
        let currentEditingMedicine = null;
        let currentStudentId = null;
        let autoDispenseInterval = null;

        const ALERT_CONFIG = {
            LOW_STOCK_THRESHOLD: 15,
            CRITICAL_STOCK_THRESHOLD: 5,
            EXPIRY_WARNING_DAYS: 30
        };

        // Initialize System
        document.addEventListener('DOMContentLoaded', async function() {
            console.log('Initializing Firebase system...');
            await initDatabase();
            loadDashboard();
            loadStudents();
            updateStudentSelect();
            startAutoDispenseSystem();
            
            document.getElementById('studentForm').addEventListener('submit', handleSaveStudent);
            document.getElementById('medicineForm').addEventListener('submit', handleSaveMedicine);
        });

        // Database Functions
        async function initDatabase() {
            try {
                showLoading(true);
                console.log('Loading data from Firebase...');
                await loadFromDatabase();
                showAlert('เชื่อมต่อฐานข้อมูลสำเร็จ', 'success');
                return true;
            } catch (error) {
                console.error('Database init error:', error);
                showAlert('เกิดข้อผิดพลาดในการเชื่อมต่อฐานข้อมูล', 'danger');
                return false;
            } finally {
                showLoading(false);
            }
        }

        async function loadFromDatabase() {
            try {
                const studentsSnapshot = await db.collection('students').orderBy('createdAt', 'desc').get();
                students = studentsSnapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
                console.log(`Loaded ${students.length} students`);

                const medicinesSnapshot = await db.collection('medicines').orderBy('createdAt', 'desc').get();
                medicines = medicinesSnapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
                console.log(`Loaded ${medicines.length} medicines`);

                const historySnapshot = await db.collection('medicine_history').orderBy('createdAt', 'desc').limit(100).get();
                medicineHistory = historySnapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
            } catch (error) {
                console.error('Load data error:', error);
                throw error;
            }
        }

        async function saveStudent(studentData, isUpdate = false) {
            try {
                showLoading(true);
                const data = {
                    studentId: studentData.id,
                    room: studentData.room,
                    firstName: studentData.firstName,
                    lastName: studentData.lastName,
                    age: studentData.age,
                    allergies: studentData.allergies || '',
                    status: studentData.status,
                    updatedAt: firebase.firestore.FieldValue.serverTimestamp()
                };

                if (isUpdate) {
                    const studentDoc = students.find(s => s.studentId === studentData.id);
                    if (studentDoc) {
                        await db.collection('students').doc(studentDoc.id).update(data);
                        const index = students.findIndex(s => s.id === studentDoc.id);
                        if (index !== -1) {
                            students[index] = { ...students[index], ...data };
                        }
                    }
                } else {
                    const existing = students.find(s => s.studentId === studentData.id);
                    if (existing) {
                        throw new Error('รหัสนักเรียนนี้มีอยู่แล้ว');
                    }
                    data.createdAt = firebase.firestore.FieldValue.serverTimestamp();
                    const docRef = await db.collection('students').add(data);
                    students.unshift({ id: docRef.id, ...data });
                }
                return true;
            } catch (error) {
                console.error('Save student error:', error);
                throw error;
            } finally {
                showLoading(false);
            }
        }

        async function saveMedicine(medicineData, isUpdate = false) {
            try {
                showLoading(true);
                const data = {
                    studentId: medicineData.studentId,
                    name: medicineData.name,
                    currentQuantity: medicineData.currentQuantity,
                    unit: medicineData.unit,
                    expiryDate: medicineData.expiryDate || null,
                    dosages: medicineData.dosages || [],
                    minStockAlert: medicineData.minStockAlert || ALERT_CONFIG.LOW_STOCK_THRESHOLD,
                    criticalStockAlert: medicineData.criticalStockAlert || ALERT_CONFIG.CRITICAL_STOCK_THRESHOLD,
                    updatedAt: firebase.firestore.FieldValue.serverTimestamp()
                };

                if (isUpdate) {
                    await db.collection('medicines').doc(medicineData.id).update(data);
                    const index = medicines.findIndex(m => m.id === medicineData.id);
                    if (index !== -1) {
                        medicines[index] = { ...medicines[index], ...data };
                    }
                } else {
                    data.createdAt = firebase.firestore.FieldValue.serverTimestamp();
                    const docRef = await db.collection('medicines').add(data);
                    medicines.unshift({ id: docRef.id, ...data });
                }
                return true;
            } catch (error) {
                console.error('Save medicine error:', error);
                throw error;
            } finally {
                showLoading(false);
            }
        }

        async function saveMedicineHistory(historyData) {
            try {
                const data = {
                    medicineId: historyData.medicineId,
                    studentId: historyData.studentId,
                    medicineName: historyData.medicineName,
                    studentName: historyData.studentName,
                    amount: historyData.amount,
                    unit: historyData.unit,
                    time: historyData.time,
                    date: historyData.date,
                    type: historyData.type,
                    createdAt: firebase.firestore.FieldValue.serverTimestamp()
                };
                
                const docRef = await db.collection('medicine_history').add(data);
                medicineHistory.unshift({ id: docRef.id, ...data });
                return true;
            } catch (error) {
                console.error('Save history error:', error);
                throw error;
            }
        }

        async function updateMedicineQuantity(medicineId, newQuantity) {
            try {
                await db.collection('medicines').doc(medicineId).update({
                    currentQuantity: newQuantity,
                    updatedAt: firebase.firestore.FieldValue.serverTimestamp()
                });
                
                const index = medicines.findIndex(m => m.id === medicineId);
                if (index !== -1) {
                    medicines[index].currentQuantity = newQuantity;
                }
                return true;
            } catch (error) {
                console.error('Update quantity error:', error);
                throw error;
            }
        }

        async function updateStudentStatus(studentId, newStatus) {
            try {
                const student = students.find(s => s.studentId === studentId);
                if (student) {
                    await db.collection('students').doc(student.id).update({
                        status: newStatus,
                        updatedAt: firebase.firestore.FieldValue.serverTimestamp()
                    });
                    student.status = newStatus;
                }
                return true;
            } catch (error) {
                console.error('Update status error:', error);
                throw error;
            }
        }

        async function deleteStudent(studentId) {
            const student = students.find(s => s.studentId === studentId);
            if (!student) return;

            if (confirm(`คุณแน่ใจหรือไม่ที่จะลบนักเรียน "${student.firstName} ${student.lastName}"?`)) {
                try {
                    showLoading(true);
                    
                    const studentMedicines = medicines.filter(m => m.studentId === studentId);
                    for (const med of studentMedicines) {
                        await db.collection('medicines').doc(med.id).delete();
                    }
                    
                    await db.collection('students').doc(student.id).delete();
                    
                    students = students.filter(s => s.id !== student.id);
                    medicines = medicines.filter(m => m.studentId !== studentId);
                    
                    loadDashboard();
                    loadStudents();
                    updateStudentSelect();
                    
                    showAlert(`ลบนักเรียน ${student.firstName} ${student.lastName} เรียบร้อยแล้ว`, 'success');
                } catch (error) {
                    showAlert('เกิดข้อผิดพลาดในการลบนักเรียน', 'danger');
                } finally {
                    showLoading(false);
                }
            }
        }

        async function deleteMedicine(medicineId) {
            const medicine = medicines.find(m => m.id === medicineId);
            if (!medicine) return;

            if (confirm(`คุณแน่ใจหรือไม่ที่จะลบยา "${medicine.name}"?`)) {
                try {
                    showLoading(true);
                    await db.collection('medicines').doc(medicineId).delete();
                    medicines = medicines.filter(m => m.id !== medicineId);
                    
                    loadDashboard();
                    loadStudentMedicines();
                    showAlert(`ลบยา ${medicine.name} เรียบร้อยแล้ว`, 'success');
                } catch (error) {
                    showAlert('เกิดข้อผิดพลาดในการลบยา', 'danger');
                } finally {
                    showLoading(false);
                }
            }
        }

        // Tab Management
        function showTab(tabName, event) {
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.nav-tab').forEach(tab => tab.classList.remove('active'));
            document.getElementById(tabName + '-tab').classList.add('active');
            if (event) event.target.classList.add('active');
            if (tabName === 'dashboard') loadDashboard();
        }

        // Dashboard Functions
        function loadDashboard() {
            const alerts = generateAlerts();
            const stats = generateStatistics();
            loadAlertDashboard(alerts);
            loadStatsDashboard(stats);
        }

        function generateAlerts() {
            const alerts = { expired: [], expiring: [], criticalStock: [], lowStock: [] };
            const today = new Date();
            const warningDate = new Date(today.getTime() + ALERT_CONFIG.EXPIRY_WARNING_DAYS * 24 * 60 * 60 * 1000);

            medicines.forEach(medicine => {
                if (medicine.expiryDate) {
                    const expiryDate = new Date(medicine.expiryDate);
                    if (expiryDate < today) alerts.expired.push(medicine);
                    else if (expiryDate <= warningDate) alerts.expiring.push(medicine);
                }

                const criticalThreshold = medicine.criticalStockAlert || ALERT_CONFIG.CRITICAL_STOCK_THRESHOLD;
                const lowThreshold = medicine.minStockAlert || ALERT_CONFIG.LOW_STOCK_THRESHOLD;

                if (medicine.currentQuantity <= criticalThreshold) alerts.criticalStock.push(medicine);
                else if (medicine.currentQuantity <= lowThreshold) alerts.lowStock.push(medicine);
            });

            return alerts;
        }

        function generateStatistics() {
            return {
                totalStudents: students.length,
                boardingStudents: students.filter(s => s.status === 'boarding').length,
                homeStudents: students.filter(s => s.status === 'home').length,
                manualStudents: students.filter(s => s.status === 'manual').length,
                totalMedicines: medicines.length,
                autoDispensesToday: medicineHistory.filter(h => h.type === 'auto' && h.date === new Date().toDateString()).length
            };
        }

        function loadAlertDashboard(alerts) {
            const container = document.getElementById('alertDashboard');
            const alertCards = [
                { title: 'ยาหมดอายุแล้ว', icon: '🚨', count: alerts.expired.length, type: 'danger' },
                { title: 'ยาใกล้หมดอายุ', icon: '⚠️', count: alerts.expiring.length, type: 'warning' },
                { title: 'ยาเหลือน้อยมาก', icon: '🔴', count: alerts.criticalStock.length, type: 'danger' },
                { title: 'ยาเหลือน้อย', icon: '🟡', count: alerts.lowStock.length, type: 'warning' }
            ];

            container.innerHTML = alertCards.map(card => `
                <div class="alert-card alert-${card.type}">
                    <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 12px;">
                        <span style="font-size: 1.5rem;">${card.icon}</span>
                        <span style="font-weight: 600;">${card.title}</span>
                    </div>
                    <div class="alert-count ${card.type}">${card.count}</div>
                </div>
            `).join('');
        }

        function loadStatsDashboard(stats) {
            const container = document.getElementById('statsDashboard');
            const statCards = [
                { number: stats.totalStudents, label: 'นักเรียนทั้งหมด' },
                { number: stats.boardingStudents, label: 'อยู่โรงเรียน' },
                { number: stats.homeStudents, label: 'กลับบ้าน' },
                { number: stats.totalMedicines, label: 'รายการยา' },
                { number: stats.autoDispensesToday, label: 'หักยาวันนี้' }
            ];

            container.innerHTML = statCards.map(card => `
                <div class="stat-card">
                    <div class="stat-number">${card.number}</div>
                    <div class="stat-label">${card.label}</div>
                </div>
            `).join('');
        }

        function refreshDashboard() {
            loadFromDatabase().then(() => {
                loadDashboard();
                showAlert('รีเฟรชแดชบอร์ดเรียบร้อยแล้ว', 'success');
            });
        }

        // Student Management
        function loadStudents() {
            const container = document.getElementById('studentsContainer');
            let filteredStudents = [...students];
            
            const statusFilter = document.getElementById('statusFilter')?.value;
            const searchTerm = document.getElementById('studentSearch')?.value.toLowerCase();

            if (statusFilter) filteredStudents = filteredStudents.filter(s => s.status === statusFilter);
            if (searchTerm) {
                filteredStudents = filteredStudents.filter(s => 
                    s.firstName.toLowerCase().includes(searchTerm) ||
                    s.lastName.toLowerCase().includes(searchTerm) ||
                    s.studentId.toLowerCase().includes(searchTerm) ||
                    s.room.toLowerCase().includes(searchTerm)
                );
            }

            if (filteredStudents.length === 0) {
                container.innerHTML = '<div class="empty-state" style="grid-column: 1/-1;"><div class="empty-state-icon">👨‍🎓</div><h3>ไม่พบนักเรียน</h3></div>';
                return;
            }

            container.innerHTML = filteredStudents.map(student => {
                const medicineCount = medicines.filter(m => m.studentId === student.studentId).length;
                const statusClass = `status-${student.status}`;
                const statusText = { boarding: 'อยู่โรงเรียน', home: 'กลับบ้าน', manual: 'จัดการแมนนวล' }[student.status];
                const alerts = getStudentAlerts(student.studentId);

                return `
                    <div class="student-card ${alerts.length > 0 ? 'has-alerts' : ''}">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 16px;">
                            <div>
                                <div class="student-name">${student.firstName} ${student.lastName}</div>
                                <div style="color: #64748b; font-size: 0.9rem;">รหัส: ${student.studentId}</div>
                            </div>
                            <div class="student-status ${statusClass}">${statusText}</div>
                        </div>
                        ${alerts.length > 0 ? `
                            <div class="student-alerts">
                                <h4>⚠️ แจ้งเตือน</h4>
                                <ul>${alerts.map(a => `<li>${a}</li>`).join('')}</ul>
                            </div>
                        ` : ''}
                        <div class="student-info">
                            <div class="info-item">
                                <span class="info-label">ห้อง</span>
                                <span class="info-value">${student.room}</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">อายุ</span>
                                <span class="info-value">${student.age} ปี</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">จำนวนยา</span>
                                <span class="info-value">${medicineCount} รายการ</span>
                            </div>
                        </div>
                        <div class="student-actions">
                            <button class="btn btn-success" onclick="changeStudentStatus('${student.studentId}', '${student.status === 'boarding' ? 'home' : 'boarding'}')">
                                ${student.status === 'boarding' ? '🏠 กลับบ้าน' : '🏫 อยู่โรงเรียน'}
                            </button>
                            <button class="btn btn-warning" onclick="openStudentModal('${student.studentId}')">แก้ไข</button>
                            <button class="btn btn-danger" onclick="deleteStudent('${student.studentId}')">ลบ</button>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function filterStudents() {
            loadStudents();
        }

        function getStudentAlerts(studentId) {
            const alerts = [];
            const studentMedicines = medicines.filter(m => m.studentId === studentId);
            const today = new Date();

            studentMedicines.forEach(medicine => {
                if (medicine.expiryDate && new Date(medicine.expiryDate) < today) {
                    alerts.push(`ยา ${medicine.name} หมดอายุแล้ว`);
                }
                if (medicine.currentQuantity <= (medicine.criticalStockAlert || ALERT_CONFIG.CRITICAL_STOCK_THRESHOLD)) {
                    alerts.push(`ยา ${medicine.name} เหลือน้อยมาก`);
                }
            });

            return alerts;
        }

        function updateStudentSelect() {
            const select = document.getElementById('studentSelect');
            select.innerHTML = '<option value="">เลือกนักเรียน</option>';
            students.forEach(student => {
                const option = document.createElement('option');
                option.value = student.studentId;
                option.textContent = `${student.firstName} ${student.lastName} (${student.room})`;
                select.appendChild(option);
            });
        }

        async function handleSaveStudent(event) {
            event.preventDefault();
            try {
                const studentData = {
                    id: document.getElementById('studentId').value.trim(),
                    room: document.getElementById('studentRoom').value.trim(),
                    firstName: document.getElementById('studentFirstName').value.trim(),
                    lastName: document.getElementById('studentLastName').value.trim(),
                    age: parseInt(document.getElementById('studentAge').value),
                    allergies: document.getElementById('allergies').value.trim(),
                    status: document.getElementById('studentStatus').value
                };

                await saveStudent(studentData, currentEditingStudent !== null);
                showAlert(currentEditingStudent ? 'อัปเดตข้อมูลเรียบร้อย' : 'เพิ่มนักเรียนเรียบร้อย', 'success');
                loadDashboard();
                loadStudents();
                updateStudentSelect();
                closeStudentModal();
            } catch (error) {
                showAlert(error.message || 'เกิดข้อผิดพลาด', 'danger');
            }
        }

        function openStudentModal(studentId = null) {
            const modal = document.getElementById('studentModal');
            const title = document.getElementById('studentModalTitle');

            if (studentId) {
                const student = students.find(s => s.studentId === studentId);
                currentEditingStudent = studentId;
                title.textContent = 'แก้ไขข้อมูลนักเรียน';
                
                document.getElementById('studentId').value = student.studentId;
                document.getElementById('studentId').readOnly = true;
                document.getElementById('studentRoom').value = student.room;
                document.getElementById('studentFirstName').value = student.firstName;
                document.getElementById('studentLastName').value = student.lastName;
                document.getElementById('studentAge').value = student.age;
                document.getElementById('allergies').value = student.allergies || '';
                document.getElementById('studentStatus').value = student.status;
            } else {
                currentEditingStudent = null;
                title.textContent = 'เพิ่มนักเรียนใหม่';
                document.getElementById('studentForm').reset();
                document.getElementById('studentId').readOnly = false;
            }

            modal.style.display = 'block';
        }

        function closeStudentModal() {
            document.getElementById('studentModal').style.display = 'none';
            document.getElementById('studentForm').reset();
            currentEditingStudent = null;
        }

        async function changeStudentStatus(studentId, newStatus) {
            try {
                await updateStudentStatus(studentId, newStatus);
                loadDashboard();
                loadStudents();
                const statusText = newStatus === 'boarding' ? 'อยู่โรงเรียน' : 'กลับบ้าน';
                showAlert(`เปลี่ยนสถานะเป็น "${statusText}" เรียบร้อยแล้ว`, 'success');
            } catch (error) {
                showAlert('เกิดข้อผิดพลาด', 'danger');
            }
        }

        async function bulkUpdateStatus(newStatus) {
            if (confirm(`เปลี่ยนสถานะนักเรียนทั้งหมดเป็น "${newStatus === 'boarding' ? 'อยู่โรงเรียน' : 'กลับบ้าน'}"?`)) {
                try {
                    showLoading(true);
                    const batch = db.batch();
                    students.forEach(student => {
                        const ref = db.collection('students').doc(student.id);
                        batch.update(ref, { status: newStatus });
                        student.status = newStatus;
                    });
                    await batch.commit();
                    loadDashboard();
                    loadStudents();
                    showAlert('เปลี่ยนสถานะทั้งหมดเรียบร้อยแล้ว', 'success');
                } catch (error) {
                    showAlert('เกิดข้อผิดพลาด', 'danger');
                } finally {
                    showLoading(false);
                }
            }
        }

        // Medicine Management
        function loadStudentMedicines() {
            const studentId = document.getElementById('studentSelect').value;
            const container = document.getElementById('medicinesContainer');
            const addBtn = document.getElementById('addMedicineBtn');

            currentStudentId = studentId;

            if (!studentId) {
                container.innerHTML = '<div class="empty-state"><div class="empty-state-icon">💊</div><h3>เลือกนักเรียนเพื่อจัดการยา</h3></div>';
                addBtn.disabled = true;
                return;
            }

            addBtn.disabled = false;
            const studentMedicines = medicines.filter(m => m.studentId === studentId);

            if (studentMedicines.length === 0) {
                container.innerHTML = '<div class="empty-state"><div class="empty-state-icon">💊</div><h3>ยังไม่มียา</h3></div>';
                return;
            }

            container.innerHTML = studentMedicines.map(medicine => {
                const alerts = getMedicineAlerts(medicine);
                const quantityClass = getQuantityClass(medicine);
                const dosageText = medicine.dosages?.map(d => `${d.time} (${d.amount} ${medicine.unit})`).join(', ') || 'ไม่ระบุ';

                return `
                    <div class="medicine-card ${getMedicineCardClass(medicine)}">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 16px;">
                            <div>
                                <div class="medicine-name">${medicine.name}</div>
                                <div style="margin-top: 8px;">
                                    <strong>${medicine.currentQuantity} ${medicine.unit}</strong>
                                    <span class="quantity-badge ${quantityClass}">${getQuantityText(medicine)}</span>
                                </div>
                            </div>
                        </div>
                        ${alerts.length > 0 ? `<div style="background: #fef2f2; padding: 12px; border-radius: 8px; margin-bottom: 16px; border-left: 4px solid #ef4444;">${alerts.map(a => a.message).join('<br>')}</div>` : ''}
                        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 12px; margin-bottom: 16px;">
                            <div class="info-item">
                                <span class="info-label">หมดอายุ</span>
                                <span class="info-value">${medicine.expiryDate ? new Date(medicine.expiryDate).toLocaleDateString('th-TH') : '-'}</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">เวลาให้ยา</span>
                                <span class="info-value">${dosageText}</span>
                            </div>
                        </div>
                        <div style="display: flex; gap: 8px;">
                            <button class="btn btn-warning" onclick="openMedicineModal('${medicine.id}')">แก้ไข</button>
                            <button class="btn btn-success" onclick="dispenseMedicine('${medicine.id}')">หักยา</button>
                            <button class="btn btn-danger" onclick="deleteMedicine('${medicine.id}')">ลบ</button>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function getMedicineAlerts(medicine) {
            const alerts = [];
            const today = new Date();

            if (medicine.expiryDate) {
                const expiryDate = new Date(medicine.expiryDate);
                const daysDiff = Math.ceil((expiryDate - today) / (1000 * 60 * 60 * 24));
                
                if (daysDiff < 0) alerts.push({ type: 'danger', message: '⚠️ ยาหมดอายุแล้ว' });
                else if (daysDiff <= ALERT_CONFIG.EXPIRY_WARNING_DAYS) alerts.push({ type: 'warning', message: `⏰ หมดอายุใน ${daysDiff} วัน` });
            }

            const criticalThreshold = medicine.criticalStockAlert || ALERT_CONFIG.CRITICAL_STOCK_THRESHOLD;
            const lowThreshold = medicine.minStockAlert || ALERT_CONFIG.LOW_STOCK_THRESHOLD;

            if (medicine.currentQuantity <= criticalThreshold) alerts.push({ type: 'danger', message: '🔴 ยาเหลือน้อยมาก' });
            else if (medicine.currentQuantity <= lowThreshold) alerts.push({ type: 'warning', message: '🟡 ยาเหลือน้อย' });

            return alerts;
        }

        function getMedicineCardClass(medicine) {
            const today = new Date();
            if (medicine.expiryDate) {
                const expiryDate = new Date(medicine.expiryDate);
                const daysDiff = Math.ceil((expiryDate - today) / (1000 * 60 * 60 * 24));
                if (daysDiff < 0) return 'expired';
                if (daysDiff <= ALERT_CONFIG.EXPIRY_WARNING_DAYS) return 'expiring';
            }
            return '';
        }

        function getQuantityClass(medicine) {
            const critical = medicine.criticalStockAlert || ALERT_CONFIG.CRITICAL_STOCK_THRESHOLD;
            const low = medicine.minStockAlert || ALERT_CONFIG.LOW_STOCK_THRESHOLD;
            if (medicine.currentQuantity <= critical) return 'quantity-critical';
            if (medicine.currentQuantity <= low) return 'quantity-low';
            return 'quantity-sufficient';
        }

        function getQuantityText(medicine) {
            const critical = medicine.criticalStockAlert || ALERT_CONFIG.CRITICAL_STOCK_THRESHOLD;
            const low = medicine.minStockAlert || ALERT_CONFIG.LOW_STOCK_THRESHOLD;
            if (medicine.currentQuantity <= critical) return 'ใกล้หมด';
            if (medicine.currentQuantity <= low) return 'เหลือน้อย';
            return 'เพียงพอ';
        }

        function openMedicineModal(medicineId = null) {
            if (!currentStudentId && !medicineId) {
                showAlert('กรุณาเลือกนักเรียนก่อน', 'danger');
                return;
            }

            const modal = document.getElementById('medicineModal');
            const title = document.getElementById('medicineModalTitle');

            if (medicineId) {
                const medicine = medicines.find(m => m.id === medicineId);
                currentEditingMedicine = medicineId;
                title.textContent = 'แก้ไขข้อมูลยา';
                
                document.getElementById('medicineName').value = medicine.name;
                document.getElementById('medicineQuantity').value = medicine.currentQuantity;
                document.getElementById('medicineUnit').value = medicine.unit;
                document.getElementById('medicineExpiry').value = medicine.expiryDate || '';
                loadDosages(medicine.dosages || []);
            } else {
                currentEditingMedicine = null;
                title.textContent = 'เพิ่มยาใหม่';
                document.getElementById('medicineForm').reset();
                resetDosages();
            }

            modal.style.display = 'block';
        }

        function closeMedicineModal() {
            document.getElementById('medicineModal').style.display = 'none';
            document.getElementById('medicineForm').reset();
            currentEditingMedicine = null;
        }

        async function handleSaveMedicine(event) {
            event.preventDefault();
            try {
                const dosages = [];
                document.querySelectorAll('.dosage-row').forEach(row => {
                    const time = row.querySelector('.dosage-time').value;
                    const amount = row.querySelector('.dosage-amount').value;
                    if (time && amount) dosages.push({ time, amount: parseFloat(amount) });
                });

                const medicineData = {
                    id: currentEditingMedicine,
                    studentId: currentStudentId,
                    name: document.getElementById('medicineName').value.trim(),
                    currentQuantity: parseFloat(document.getElementById('medicineQuantity').value),
                    unit: document.getElementById('medicineUnit').value,
                    expiryDate: document.getElementById('medicineExpiry').value || null,
                    dosages: dosages,
                    minStockAlert: ALERT_CONFIG.LOW_STOCK_THRESHOLD,
                    criticalStockAlert: ALERT_CONFIG.CRITICAL_STOCK_THRESHOLD
                };

                await saveMedicine(medicineData, currentEditingMedicine !== null);
                showAlert(currentEditingMedicine ? 'อัปเดตยาเรียบร้อย' : 'เพิ่มยาเรียบร้อย', 'success');
                loadDashboard();
                loadStudentMedicines();
                closeMedicineModal();
            } catch (error) {
                showAlert(error.message || 'เกิดข้อผิดพลาด', 'danger');
            }
        }

        function addDosageRow() {
            const container = document.getElementById('dosageContainer');
            const newRow = document.createElement('div');
            newRow.className = 'dosage-row';
            newRow.innerHTML = `
                <input type="time" class="form-control dosage-time" style="flex: 1;">
                <input type="number" class="form-control dosage-amount" step="0.5" style="flex: 1;">
                <button type="button" class="btn btn-danger" onclick="removeDosageRow(this)">ลบ</button>
            `;
            container.appendChild(newRow);
        }

        function removeDosageRow(button) {
            const container = document.getElementById('dosageContainer');
            if (container.children.length > 1) button.parentElement.remove();
        }

        function resetDosages() {
            document.getElementById('dosageContainer').innerHTML = `
                <div class="dosage-row">
                    <input type="time" class="form-control dosage-time" style="flex: 1;">
                    <input type="number" class="form-control dosage-amount" step="0.5" style="flex: 1;">
                    <button type="button" class="btn btn-danger" onclick="removeDosageRow(this)">ลบ</button>
                </div>
            `;
        }

        function loadDosages(dosages) {
            const container = document.getElementById('dosageContainer');
            container.innerHTML = '';
            if (dosages.length === 0) {
                resetDosages();
                return;
            }
            dosages.forEach(dosage => {
                const row = document.createElement('div');
                row.className = 'dosage-row';
                row.innerHTML = `
                    <input type="time" class="form-control dosage-time" value="${dosage.time}" style="flex: 1;">
                    <input type="number" class="form-control dosage-amount" value="${dosage.amount}" step="0.5" style="flex: 1;">
                    <button type="button" class="btn btn-danger" onclick="removeDosageRow(this)">ลบ</button>
                `;
                container.appendChild(row);
            });
        }

        async function dispenseMedicine(medicineId) {
            try {
                const medicine = medicines.find(m => m.id === medicineId);
                const student = students.find(s => s.studentId === medicine.studentId);
                
                const amount = prompt(`หักยา ${medicine.name}\nคงเหลือ: ${medicine.currentQuantity} ${medicine.unit}\n\nระบุจำนวน:`, '1');
                if (!amount) return;
                
                const dispensedAmount = parseFloat(amount);
                if (isNaN(dispensedAmount) || dispensedAmount <= 0) {
                    showAlert('กรุณาระบุจำนวนที่ถูกต้อง', 'danger');
                    return;
                }
                
                if (dispensedAmount > medicine.currentQuantity) {
                    showAlert('จำนวนยาไม่เพียงพอ', 'danger');
                    return;
                }

                const newQuantity = medicine.currentQuantity - dispensedAmount;
                await updateMedicineQuantity(medicineId, newQuantity);
                
                const now = new Date();
                await saveMedicineHistory({
                    medicineId: medicine.id,
                    studentId: student.studentId,
                    medicineName: medicine.name,
                    studentName: `${student.firstName} ${student.lastName}`,
                    amount: dispensedAmount,
                    unit: medicine.unit,
                    time: now.toTimeString().slice(0, 5),
                    date: now.toDateString(),
                    type: 'manual'
                });
                
                loadDashboard();
                loadStudentMedicines();
                showAlert(`หักยา ${medicine.name} เรียบร้อยแล้ว`, 'success');
            } catch (error) {
                showAlert('เกิดข้อผิดพลาด', 'danger');
            }
        }

        // Auto Dispense System
        function startAutoDispenseSystem() {
            if (autoDispenseInterval) clearInterval(autoDispenseInterval);
            autoDispenseInterval = setInterval(checkAutoDispense, 60000);
            checkAutoDispense();
        }

        async function checkAutoDispense() {
            try {
                const now = new Date();
                const currentTime = now.toTimeString().slice(0, 5);
                const currentDate = now.toDateString();

                const eligibleStudents = students.filter(s => s.status === 'boarding');
                
                for (const student of eligibleStudents) {
                    const studentMedicines = medicines.filter(m => m.studentId === student.studentId);
                    
                    for (const medicine of studentMedicines) {
                        if (medicine.dosages) {
                            for (const dosage of medicine.dosages) {
                                if (dosage.time === currentTime) {
                                    const todayHistory = medicineHistory.filter(h => 
                                        h.medicineId === medicine.id && 
                                        h.date === currentDate &&
                                        h.time === currentTime &&
                                        h.type === 'auto'
                                    );

                                    if (todayHistory.length === 0 && medicine.currentQuantity >= dosage.amount) {
                                        await autoDispenseMedicine(medicine, student, dosage);
                                    }
                                }
                            }
                        }
                    }
                }
            } catch (error) {
                console.error('Auto dispense error:', error);
            }
        }

        async function autoDispenseMedicine(medicine, student, dosage) {
            try {
                const newQuantity = medicine.currentQuantity - dosage.amount;
                await updateMedicineQuantity(medicine.id, newQuantity);
                
                await saveMedicineHistory({
                    medicineId: medicine.id,
                    studentId: student.studentId,
                    medicineName: medicine.name,
                    studentName: `${student.firstName} ${student.lastName}`,
                    amount: dosage.amount,
                    unit: medicine.unit,
                    time: dosage.time,
                    date: new Date().toDateString(),
                    type: 'auto'
                });

                if (currentStudentId === student.studentId) loadStudentMedicines();
            } catch (error) {
                console.error('Auto dispense medicine error:', error);
            }
        }

        // Report Functions
        function generateMedicineReport() {
            const container = document.getElementById('reportsContainer');
            
            if (medicines.length === 0) {
                container.innerHTML = '<div class="empty-state"><div class="empty-state-icon">📋</div><h3>ไม่มีข้อมูลยา</h3></div>';
                return;
            }

            let html = `
                <div style="background: white; border-radius: 16px; padding: 24px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);">
                    <h3 style="margin-bottom: 20px;">📊 รายงานยาทั้งหมด</h3>
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background: #f8fafc;">
                                <th style="padding: 12px; text-align: left; border-bottom: 2px solid #e2e8f0;">นักเรียน</th>
                                <th style="padding: 12px; text-align: left; border-bottom: 2px solid #e2e8f0;">ยา</th>
                                <th style="padding: 12px; text-align: left; border-bottom: 2px solid #e2e8f0;">คงเหลือ</th>
                                <th style="padding: 12px; text-align: left; border-bottom: 2px solid #e2e8f0;">สถานะ</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            medicines.forEach(medicine => {
                const student = students.find(s => s.studentId === medicine.studentId);
                const alerts = getMedicineAlerts(medicine);
                const status = alerts.length > 0 ? alerts.map(a => a.message).join(', ') : 'ปกติ';
                const statusColor = alerts.some(a => a.type === 'danger') ? '#dc2626' : alerts.length > 0 ? '#d97706' : '#059669';

                html += `
                    <tr style="border-bottom: 1px solid #e2e8f0;">
                        <td style="padding: 12px;">${student ? `${student.firstName} ${student.lastName}` : '-'}</td>
                        <td style="padding: 12px;">${medicine.name}</td>
                        <td style="padding: 12px;">${medicine.currentQuantity} ${medicine.unit}</td>
                        <td style="padding: 12px; color: ${statusColor};">${status}</td>
                    </tr>
                `;
            });

            html += '</tbody></table></div>';
            container.innerHTML = html;
        }

        // Utility Functions
        function showAlert(message, type) {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type}`;
            alert.textContent = message;
            alert.style.position = 'fixed';
            alert.style.top = '20px';
            alert.style.right = '20px';
            alert.style.zIndex = '9999';
            alert.style.minWidth = '300px';
            document.body.appendChild(alert);
            setTimeout(() => alert.remove(), 5000);
        }

        function showLoading(show) {
            let overlay = document.getElementById('loadingOverlay');
            if (show) {
                if (!overlay) {
                    overlay = document.createElement('div');
                    overlay.id = 'loadingOverlay';
                    overlay.className = 'loading-overlay';
                    overlay.innerHTML = '<div class="loading-content"><div class="loading-spinner"></div><p>กำลังโหลด...</p></div>';
                    document.body.appendChild(overlay);
                }
                overlay.style.display = 'flex';
            } else {
                if (overlay) overlay.style.display = 'none';
            }
        }

        // Close modals on outside click
        window.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        });
    </script>
</body>
</html>
